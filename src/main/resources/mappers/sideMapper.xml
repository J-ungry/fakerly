  </insert> -->
  <update id="update" parameterType="SideDto"> <!--  게시글 수정  -->
  	UPDATE SIDEBOARD SET
  		title=#{title},
  		summ=#{summ},
  		intro=#{intro},
  		purpose=#{purpose},
  		sup=#{sup},
  		attend=#{attend},
  		state=#{state}
  		WHERE side_board_no=#{sideBoardNo}
  		
  		
  </update>
  

  </mapper>