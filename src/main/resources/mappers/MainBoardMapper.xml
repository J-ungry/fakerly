<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joongbu.fakerly.mapper.MainBoardMapper">
	
	<select id="list">
		SELECT * FROM mainboard
			ORDER BY board_no DESC
	</select>
	
	<select id="detail">
		SELECT * FROM mainboard where board_no=#{boardNo}
	</select>
	
	
	<insert id="insert" parameterType="MainBoardDto">
		<!-- user_no와 keyword_no 작성자의 아이디와 키워드를 가져올 예정 -->
		insert into mainboard
		(user_no,keyword_no,mainboard_title, mainboard_contents,mainboard_view,mainboard_link)
     	values
     	(1,1,#{mainboardTitle},#{mainboardContents},#{mainboardView},#{mainboardLink})
	</insert>
	
</mapper>